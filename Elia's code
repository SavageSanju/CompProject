};

class Rental
{
public:
    char MovieName[30];
    time_t DateBorrowed;
    time_t DateReturned;
};

class Customer
{
public:
    Rental rental;
    int Ccode;
    char Name[30];
    void rentmovie();
    void returnmovie();
    void viewhistory();
    void customermenu();
} ;

void Customer::customermenu()
{
    int c;
    char choice='y';
    do
    {
        cout<<"OPTIONS:"<<endl;
        cout<<"1.Rent a movie"<<endl;
        cout<<"2.Return a movie"<<endl;
        cout<<"3.View history"<<endl;
        cin>>c;
        switch(c)
        {
            case 1: rentmovie();
                break;
            case 2: returnmovie();
                break;
            case 3: viewhistory();
                break;
            default:cout<<"Wrong input! Please input numbers 1, 2 or 3 only."<<endl;
                break;
        }
        cout<<"Do you want to continue? y or n"<<endl;
        cin>>choice;
    }
    while(choice=='y'||choice=='Y');
}

fstream f;
